{
	"name": "GitHub Plus",
	"version": "1.0.1",
	"manifest_version": 2,
	"description": "Makes cosmetic changes to the GitHub website.",
	"homepage_url": "https://github.com/thinkingmedia/ext-github",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"default_locale": "en",
	"permissions": [
		"https://github.com/*"
	],
	"content_scripts": [{
		"matches": [
			"https://github.com/*"
		],
		"js": [
			"js/lib/jquery.min.js",
			"js/lib/jquery.tipsy.js",
			"js/lib/underscore-min.js",
			"js/lib/backbone-min.js",
			"js/lib/mustache.js",
			"js/app/main.js"
		],
		"css": [
			"css/tipsy.css",
			"css/styles.css"
		]
	}],
	"web_accessible_resources": [
		"icons/icon24.png",
		"templates/logo.mustache",
		"templates/button.mustache"
	]
}