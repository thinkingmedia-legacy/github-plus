{
	"name": "GitHub Plus",
	"version": "1.0.1",
	"manifest_version": 2,
	"description": "Makes cosmetic changes to the GitHub website.",
	"homepage_url": "https://github.com/thinkingmedia/github-plus",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"default_locale": "en",
	"permissions": [
		"https://github.com/*"
	],
	"content_scripts": [
		{
			"matches": ["https://github.com/*"],
			"js": ["js/lib/require.js","js/app/main.js"],
			"css": ["css/styles.css"]
		}
	],
	"web_accessible_resources": [
		"js/*",
		"icons/*",
		"templates/*"
	]
}